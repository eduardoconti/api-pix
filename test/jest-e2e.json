{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/../src/app/$1",
    "^@domain/(.*)$": "<rootDir>/../src/domain/$1",
    "^@infra/(.*)$": "<rootDir>/../src/infra/$1",
    "^@main/(.*)$": "<rootDir>/../src/main/$1",
    "^@presentation/(.*)$": "<rootDir>/../src/presentation/$1"
  }
}
